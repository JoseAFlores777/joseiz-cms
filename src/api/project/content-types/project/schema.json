{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "primaryStack": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::skill.skill"
    },
    "secondaryStack": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::language.language"
    },
    "externalLinks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::web-link.web-link"
    },
    "projectName": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true
    },
    "shortDescription": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext",
      "maxLength": 200
    },
    "description": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext"
    },
    "projectType": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "Frontend",
        "Backend",
        "DevOps",
        "Design",
        "Mobile App Development",
        "Data Science",
        "Machine Learning",
        "Artificial Intelligence",
        "IoT (Internet of Things)",
        "Game Development",
        "Blockchain",
        "Cybersecurity",
        "Cloud Computing",
        "Web Development",
        "UI&UX"
      ]
    },
    "codeRepositoryUrl": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::web-link.web-link"
    },
    "previewUrl": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::web-link.web-link"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "additionalImages": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "difficultyLevel": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "Beginner",
        "Intermediate",
        "Advanced",
        "Expert"
      ]
    },
    "onPortfolio": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "boolean",
      "default": true
    },
    "onCv": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "boolean",
      "default": true
    }
  }
}
